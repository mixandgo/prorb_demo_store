<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <div class="md:items-center md:justify-between">
      <h2 class="text-2xl font-bold tracking-tight text-gray-900"><%= @category.name %></h2>
      <% if @category.description.present? %>
        <p class="block"><%= @category.description %></p>
      <% end %>
    </div>

    <div class="mt-6 grid grid-cols-2 gap-x-4 gap-y-10 sm:gap-x-6 md:grid-cols-4 md:gap-y-0 lg:gap-x-8">
      <% @category.products.each do |product| %>
      <div class="group relative">
        <div class="h-56 w-full overflow-hidden rounded-md bg-gray-200 lg:h-72 xl:h-80">
          <% if product.images.attached? %>
            <%= image_tag product.images.first, class: "h-full w-full object-cover object-center" %>
          <% end %>
        </div>
        <div class="flex justify-between mt-2">
          <div>
            <p class="mt-1 text-sm text-gray-500"><%= product.name %></p>
            <p class="mt-1 text-sm font-medium text-gray-900">$75</p>
          </div>
          <%= button_to "Add to Cart", add_to_cart_path(product_id: product.id), method: :patch, class: "rounded-md border border-transparent bg-gray-100 px-8 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200" %>
        </div>
        <h3 class="mt-4 text-sm text-gray-700">
          <%= product.description %>
        </h3>
      </div>
      <% end %>

      <!-- More products... -->
    </div>

    <div class="mt-8 text-sm md:hidden">
      <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">
        Shop the collection
        <span aria-hidden="true"> &rarr;</span>
      </a>
    </div>
  </div>
</div>

